<body>
    <p>Loan Amount</p>
    <input type="text" id="myInput"><br>
    <p>Loan duration in years</p>
    <input type="text" id="loanYears"><br>
    <p>Interest rate %</p>
    <input type="text" id="loanInterest"><br>
    <button type="button" onclick="getInputValue()";>Get value</button>
    <p id="printhere"></p>
    
    <script>
        function getInputValue() {
            var inputVal = document.getElementById("myInput").value;
            var inputYears = document.getElementById("loanYears").value;
            var inputInterest = document.getElementById("loanInterest").value;

            var doubletoo = (inputVal * inputYears * inputInterest) / 100;
            document.getElementById("printhere").innerHTML = "The interest paid on this loan is " + doubletoo;
        }
    
            
    </script>
